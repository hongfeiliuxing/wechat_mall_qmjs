function getUrlParam(name) {
    var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)"); //构造一个含有目标参数的正则表达式对象
    var r = window.location.search.substr(1).match(reg);  //匹配目标参数
    if (r != null) return unescape(r[2]); return null; //返回参数值
}

function addElement(data){
	//alert('ADD='+JSON.stringify(data));
	var detail = data;
	var onlineId = detail.onlineId;
	var channel = detail.channel;
	$('#channel').val(channel);
	var arrStatus = new Array();
	arrStatus[1] = '进行中';
	arrStatus[2] = '已售完';
	arrStatus[3] = '未开始';
	arrStatus[4] = '已结束';
	var status = detail['status'];
	$('#status').val(status);
	//alert($('#status').val());
	var textStatus = arrStatus[status];
	var clsSpec = 'spec_list';
	//alert(textStatus);
	for (var i in detail) {
		var val = detail[i];
		switch (i) {
			case 'showName': // 加载产品标题简介
				var showName = val;
				break;
			case 'salePrice':
				var salePrice = val/100;
				break;
			case 'purchasePrice':
				var purchasePrice = val/100;
				break;
			case 'money':
				var money = val;
				break;
			case 'ggs': // 加载产品规格
				var propertys = val;
				var hidGgs = $('#clickGgs').val();
				hidGgs = hidGgs.toString();
				hidGgs.trim();
				if (propertys.length){
					var spec_itemHtml = ''
					var id, value;
					for(var j in propertys){
						id = propertys[j]['online_id'];
						value = propertys[j]['ggValue'];
						txtId = value+id;
						txtId = txtId.toString();
						txtId.trim();
						clsSpec = 'spec_list';
						if (!count) {
							clsSpec = (onlineId == id ? 'spec_list active' : clsSpec);
							if (clsSpec == 'spec_list active') $('#clickGgs').val(value+id);
						}
						else clsSpec = (hidGgs == txtId ? 'spec_list active' : clsSpec);
						spec_itemHtml += '<span class="'+clsSpec+'" id="'+value+id+'" onclick="clickGgs('+id+',this)">'+value+'</span> ';
					}
					$('.spec_item').html(spec_itemHtml);
				}
				break;
			case 'description':
				val = editHTML(val);
				$('.text_goods').html(val);
				break;
			case 'specDescription':
				val = editHTML(val);
				$('.parameter').html(val);
				break;
			case 'maintainDesction':
				val = editHTML(val);
				$('.to_know').html(val);
				break;
			case 'sharerName':
				$('.wx_text').html(val);
				break;
			case 'sharerImg':
				$('.wx_pic').html('<img src="'+val+'" alt="">');
				break;
			case 'images':
				// 加载轮播图
				var arrImages = val.split(',');
				var swiperHtml = '<div class="swiper-wrapper">';
				if (arrImages.length){
					for(var j in arrImages){
						swiperHtml += '<div class="swiper-slide"><img src="'+arrImages[j]+'" alt=""></div>';
					}	
				}
				swiperHtml += '</div>'+
				'<div class="swiper-pagination"></div>';
				$('.swiper-container').html(swiperHtml);
				
				
				// 配置轮播图
				var swiper = new Swiper('.swiper-container', {
					pagination: '.swiper-pagination',
					//        nextButton: '.swiper-button-next',
					//        prevButton: '.swiper-button-prev',
					paginationClickable: true,
					spaceBetween: 30,
					centeredSlides: true,
					autoplay: 2500,
					autoplayDisableOnInteraction: false
				});
				break;
			case 'startTime':
				var startTime = val;
				break;
			case 'endTime':
				var endTime = val;
				break;
			case 'channel':
				if (val == 2){
					$('.subtract').unbind("tap");
					$('.add').unbind("tap");
				}else{
