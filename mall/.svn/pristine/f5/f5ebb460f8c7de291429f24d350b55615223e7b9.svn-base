.page {
  background: #f8f8f8;
  font-family: PingFangSC-Regular !important;
}
.page .content .big_box {
  width: 90%;
  margin: 0 auto;
}
.page .content .big_box .up_box {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  padding-top: .5rem;
  padding-bottom: .2rem;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  font-size: .85rem;
  font-weight: 300;
}
.page .content .big_box .up_box .up_l {
  flex: 4;
  -webkit-flex: 4;
  text-align: left;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.page .content .big_box .up_box .up_r {
  flex: 1;
  -webkit-flex: 1;
  text-align: right;
  color: #de3f37;
}
.page .content .big_box .mid_box {
  padding: .5rem 0 0;
  display: flex;
  display: -webkit-flex;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.page .content .big_box .mid_box .mid_l {
  flex: 3;
  -webkit-flex: 3;
}
.page .content .big_box .mid_box .mid_l img {
  width: 3.5rem;
  height: 3.5rem;
}
.page .content .big_box .mid_box .mid_c {
  margin-left: .3rem;
  flex: 7;
  -webkit-flex: 7;
  text-align: left;
}
.page .content .big_box .mid_box .mid_c .text_name {
  height: 2.6rem;
  line-height: 1.3rem;
  overflow: hidden;
  display: -webkit-box !important;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: .8rem;
  font-weight: 300;
  color: #000000;
  margin-top: -0.1rem;
}
.page .content .big_box .mid_box .mid_c .text_data {
  font-size: .7rem;
  font-weight: 300;
  color: #444444;
  opacity: 72;
}
.page .content .big_box .mid_box .mid_r {
  flex: 3;
  -webkit-flex: 3;
  text-align: right;
  font-size: 0.75rem;
  font-weight: 300;
}
.page .content .big_box .mid_box .mid_r .text_pri {
  margin-bottom: 1.3rem;
}
.page .content .big_box .down_box {
  margin-top: .5rem;
  text-align: right;
}
.page .content .big_box .down_box span {
  color: #f9ae39;
  border: 1px solid #f9ae39;
  border-radius: 5px;
  -webkit-border-radius: 5px;
  padding: .1rem .2rem;
  font-size: .85rem;
  font-weight: 300;
}
.page .content .big_box .btn_box span {
  padding: 0.15rem 0.2rem;
}
@media screen and (max-width: 320px) {
  .page .content .big_box .up_box {
    font-size: .75rem;
  }
  .page .content .big_box .mid_box {
    padding: .5rem 0 0.3rem;
  }
  .page .content .big_box .mid_box .mid_l img {
    width: 3.2rem;
    height: 3.2rem;
  }
  .page .content .big_box .mid_box .mid_c .text_name {
    font-size: .75rem;
  }
  .page .content .big_box .mid_box .mid_c .text_data {
    font-size: .6rem;
  }
  .page .content .big_box .down_box span {
    font-size: .75rem;
  }
  .page .content .big_box .mid_box .mid_r .text_pri {
    margin-bottom: 1.2rem;
  }
}
@media screen and (min-width: 320px) and (max-width: 374px) {
  .page .content .big_box .up_box {
    font-size: .8rem;
  }
  .page .content .big_box .mid_box .mid_l img {
    width: 3.4rem;
    height: 3.4rem;
  }
  .page .content .big_box .mid_box .mid_c .text_name {
    font-size: .8rem;
  }
  .page .content .big_box .mid_box .mid_c .text_data {
    font-size: .65rem;
  }
  .page .content .big_box .down_box span {
    font-size: .8rem;
  }
  .page .content .big_box .mid_box .mid_r .text_pri {
    margin-bottom: 1.2rem;
  }
}
