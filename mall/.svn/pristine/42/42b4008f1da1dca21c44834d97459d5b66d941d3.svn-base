.page {
  background: #f8f8f8;
  font-family: PingFangSC-Regular !important;
}
.page .bar-tab {
  background: #fafafa;
  height: auto;
}
.page .bar-tab .tab-item {
  flex: 1;
  -webkit-flex: 1;
}
.page .bar-tab .tab-item .icon {
  height: 1.4rem;
  margin: .2rem 0;
}
.page .bar-tab .tab-item .icon img {
  width: 1.4rem;
  height: 1.4rem;
}
.page .bar-tab .tab-item .tab-label {
  padding-bottom: .4rem;
  font-size: 0.65rem;
  font-weight: 300;
  color: rgba(0, 0, 0, 0.8);
}
.page .content {
  width: 100%;
}
.page .content .list-block {
  margin: 0;
}
.page .content .list-block .list_box {
  background: #f0f0f0;
}
.page .content .list-block .list_box li {
  background: #ffffff;
  margin-top: .5rem;
}
.page .content .list-block .list_box li a .goods_pic img {
  width: 100%;
  height: 9.55rem;
}
.page .content .list-block .list_box li a .goods_text {
  color: #000000;
  font-size: 0.8rem;
  overflow: hidden;
  display: -webkit-box !important;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-weight: 300;
  height: 1.85rem;
  line-height: .95rem;
  padding: 0 0.5rem;
}
.page .content .list-block .list_box li a .goods_detail {
  padding: 0 0.5rem 0.2rem;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  margin-top: 1rem;
}
.page .content .list-block .list_box li a .goods_detail .tour_num {
  flex: 2;
  -webkit-flex: 2;
  color: #de3f37;
  font-size: 1.2rem;
  height: 1.6rem;
  line-height: 1.6rem;
  transform: scale(0.5);
  -webkit-transform: scale(0.5);
  -webkit-transform-origin: 100% 100%;
  transform-origin: 100% 100%;
  margin-top: -0.6rem;
  margin-left: -1.6rem;
  text-align: center;
  border: 1px solid #de3f37;
}
.page .content .list-block .list_box li a .goods_detail .tour_pri {
  margin-left: .4rem;
  flex: 3;
  -webkit-flex: 3;
  font-size: 0.6rem;
  margin-top: -0.3rem;
}
.page .content .list-block .list_box li a .goods_detail .tour_pri .pri_one {
  color: #de3f37;
}
.page .content .list-block .list_box li a .goods_detail .tour_pri .pri_one span {
  font-size: 1.2rem;
  font-weight: 600;
}
.page .content .list-block .list_box li a .goods_detail .tour_pri .pri_two {
  margin-left: .2rem;
  color: rgba(0, 0, 0, 0.4);
  font-size: 0.7rem;
}
.page .content .list-block .list_box li a .goods_detail .tour_bri {
  flex: 3;
  -webkit-flex: 3;
  color: #000000;
  font-size: 0.65rem;
  height: 1rem;
  line-height: 1rem;
  margin-top: .2rem;
}
.page .content .list-block .list_box li a .goods_detail .go_tour {
  flex: 2;
  -webkit-flex: 2;
  color: #ffffff;
  background: #ff6860;
  height: 1.4rem;
  line-height: 1.4rem;
  font-size: 0.7rem;
  border-radius: 20px;
  text-align: center;
  margin-top: -0.3rem;
  padding-left: .2rem;
}
.page .content .list-block .list_box li a .goods_detail .go_tour img {
  width: .6rem;
  vertical-align: middle;
  margin-left: .2rem;
}
.page .content .list-block .list_box li:first-child {
  margin-top: 0;
}
@media (max-width: 320px) {
  .page .content .list-block .list_box li a .goods_text {
    font-size: .75rem;
  }
  .page .content .list-block .list_box li a .goods_detail .tour_pri {
    margin-top: -0.1rem;
  }
  .page .content .list-block .list_box li a .goods_detail .tour_pri .pri_one span {
    font-size: 1rem;
  }
}
