.page {
  background: #ffffff;
}
.page .content .top_box {
  width: 100%;
  height: 3rem;
  line-height: 3rem;
  text-align: center;
  font-size: .85rem;
  font-weight: 300;
}
.page .content .top_box span {
  color: #de3f37;
  margin: 0 .1rem;
}
.page .content .mid_box {
  background: rgba(216, 216, 216, 0.2);
  padding: 1.5rem 0 2rem;
}
.page .content .mid_box .mid_pic {
  width: 3rem;
  height: 3rem;
  margin: 0 auto;
}
.page .content .mid_box .mid_pic img {
  width: 3rem;
  height: 3rem;
}
.page .content .mid_box .mid_text {
  text-align: center;
  font-size: 0.75rem;
  font-weight: 300;
  margin-top: .2rem;
}
.page .content .invite_code {
  padding: 1.5rem 0;
  text-align: center;
  width: 95%;
  margin: 0 auto;
}
.page .content .invite_code .code_big{
  font-size: .95rem;
  font-weight: 300;
  margin-bottom: .2rem;
}
.page .content .invite_code .code_text {
  margin-bottom: .2rem;
  color: rgba(0,0,0,0.8);
  font-size: 0.75rem;
  font-weight: 300;
}
.page .content .invite_code .code_box {
  width: 50%;
  margin: 0 auto;
  font-weight: 500;
  color: #000000;
  box-shadow: 0 0 1px 0 #000000;
  font-size: 1.5rem;
  padding: .3rem .8rem;
}
.page .content .down_box {
  width: 85%;
  margin: -1rem auto -0.5rem;
  text-align: center;
}
.page .content .down_box .down_text {
  font-size: .75rem;
  font-weight: 300;
  color: rgb(0,0,0);
}
.page .content .down_box .down_btn {
  width: 95%;
  background: #de3f37;
  height: 2.5rem;
  line-height: 2.5rem;
  color: #ffffff;
  margin: .4rem auto;
  font-size: .85rem;
  font-weight: 300;
}
.page .content .foot_box{
  background: rgba(216,216,216,0.2);
  margin-top: 2rem;
  padding-bottom: 2rem;
}
.page .content .question {
  width: 95%;
  margin: 0 auto;
}
.page .content .question .que_item {
  padding-top: 1rem;
}
.page .content .question .que_item .que_title {
  color: #de3f37;
  font-size: .9rem;
  font-weight: 300;
  padding-left: 2rem;
  height: 2rem;
  line-height: 2rem;
}
.page .content .question .que_item .one {
  background: url(../img/technologyPageBits.png) no-repeat left center;
}
.page .content .question .que_item .two {
  background: url(../img/financeShoppingMoneyBagCopy.png) no-repeat left top;
}
.page .content .question .que_item .answer {
  font-size: 0.75rem;
  color: rgba(0, 0, 0, 0.8);
}
.page .content .question .que_item .answer p{
  margin: 0;
}
.page .content .question .que_item .answer .se{
  margin: .5rem 0;
}
.page .content .question .que_item .answer .plus {
  font-size: .6rem;
  color: #dadada;
}
@media(max-width: 320px){
  .page .content .top_box{
    font-size: .8rem;
  }
  .page .content .mid_box .mid_text{
    font-size: .7rem;
  }
  .page .content .invite_code .code_big{
    font-size: .85rem;
  }
  .page .content .invite_code .code_text{
    font-size: .7rem;
  }
  .page .content .invite_code .code_box{
    font-size: 1.4rem;
  }
  .page .content .question .que_item .que_title{
    font-size: .8rem;
  }
  .page .content .question .que_item .answer{
    font-size: .7rem;
  }
}
